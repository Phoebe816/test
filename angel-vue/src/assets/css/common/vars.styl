// 字体
$font-family-base = -apple-system, 'PingFang SC', 'Hiragino Sans GB', Roboto, Arial, 'Microsoft YaHei', sans-serif;
// 颜色
$--color-white = #fff
$--color-black = #000

$--color-primary = #409EFF
$--color-primary-hover = rgb(106, 197, 191)
$--color-success = #67c23a
$--color-warning = #e6a23c
$--color-danger = #f56c6c
$--color-info = #909399

$--color-text-primary = #303133
$--color-text-regular = #606266
$--color-text-secondary = #909399
$--color-text-placeholder = #c0c4cc

$--color-border-1 = #DCDFE6
$--color-border-2 = #E4E7ED
$--color-border-3 = #EBEEF5
$--color-border-4 = #F2F6FC

$--background-color-base = #fcffff

/* header */
$--background-color-header = #2B3643

/* menu */
$--background-color-menu = #364150
$--background-color-menu-hover = lighten($--background-color-menu, 20%)
$--background-color-menu-active = lighten($--background-color-menu, 10%)

$--background-color-gray = #f7f7f7
$--color-gray = gray
/* border */
$--border = 1px solid #ddd
