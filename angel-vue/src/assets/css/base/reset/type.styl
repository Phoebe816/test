// Body reset
html {
  width 100%
  height 100%
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

body {
  position relative
  width 100%
  height 100%
  font-family $font-family-base
  color $--color-text-regular
  background-color $--background-color-base
  font-size 14px
}

// Horizontal rules
hr {
  border 0px
  border-top: 1px solid #ddd;
  margin 20px 0px;
}

// Headings，不直接对h标签设置
// -------------------------

h1, h2, h3, h4, h5, h6 {
  font-family: inherit;
  font-weight: 400;
  color: inherit;
  margin: 10px 0px;
  small,
  .small {
    font-weight: normal;
    color: inherit;
  }
}

h1,
h2,
h3 {
  small,
  .small {
    font-size: 65%;
  }
}

h4,
h5,
h6 {
  small,
  .small {
    font-size: 75%;
  }
}

h1 {
  font-size: 22px;
}

h2 {
  font-size: 20px;
}

h3 {
  font-size: 18px;
}

h4 {
  font-size: 16px;
}

h5,p {
  font-size: 14px;
}

h6 {
  font-size: 12px;
}

// Lists
ul,
ol {
  padding 0
  margin: 0px
  font-size: 14px
}

// Links
a {
  color $--color-primary
  &,
  &:link,
  &:visited {
    cursor: pointer;
    text-decoration: none;
  }
  &:hover,
  &:active {
    color $--color-primary-hover
    text-decoration: none;
  }
}
